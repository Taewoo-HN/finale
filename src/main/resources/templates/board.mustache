{{>layout/header}}
<body class="bg-gray-100">
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-center">게시판</h1>

    <!-- 인기 게시글 슬라이더 -->
    <div class="swiper mySwiper mb-8">
        <div class="swiper-wrapper">
            <div class="swiper-slide bg-white p-4 rounded-lg shadow">
                <h3 class="font-bold">인기 게시글 1</h3>
                <p class="text-gray-600">이 게시글은 많은 관심을 받고 있습니다.</p>
            </div>
            <div class="swiper-slide bg-white p-4 rounded-lg shadow">
                <h3 class="font-bold">인기 게시글 2</h3>
                <p class="text-gray-600">또 다른 흥미로운 주제입니다.</p>
            </div>
            <div class="swiper-slide bg-white p-4 rounded-lg shadow">
                <h3 class="font-bold">인기 게시글 3</h3>
                <p class="text-gray-600">이 내용도 주목해 주세요.</p>
            </div>
        </div>
        <div class="swiper-pagination"></div>
    </div>

    <!-- 게시글 목록 -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">제목</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">작성자</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">날짜</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">게시글 제목 1</td>
                <td class="px-6 py-4 whitespace-nowrap">작성자1</td>
                <td class="px-6 py-4 whitespace-nowrap">2024-07-17</td>
            </tr>
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">게시글 제목 2</td>
                <td class="px-6 py-4 whitespace-nowrap">작성자2</td>
                <td class="px-6 py-4 whitespace-nowrap">2024-07-16</td>
            </tr>
            <tr>
                <td class="px-6 py-4 whitespace-nowrap">게시글 제목 3</td>
                <td class="px-6 py-4 whitespace-nowrap">작성자3</td>
                <td class="px-6 py-4 whitespace-nowrap">2024-07-15</td>
            </tr>
            </tbody>
        </table>
    </div>

    <!-- 페이지네이션 -->
    <div class="flex justify-center mt-6">
        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
            <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                이전
            </a>
            <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                1
            </a>
            <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                2
            </a>
            <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                3
            </a>
            <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                다음
            </a>
        </nav>
    </div>
</div>

<script>
    var swiper = new Swiper(".mySwiper", {
        slidesPerView: 1,
        spaceBetween: 30,
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        breakpoints: {
            640: {
                slidesPerView: 2,
                spaceBetween: 20,
            },
            768: {
                slidesPerView: 3,
                spaceBetween: 40,
            },
        },
    });
</script>
